{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "types": ["jest", "@testing-library/jest-dom"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "src/",
    "paths": {
      "@/*": ["src/*"], 
      "@/components/*": ["components/*"], 
      "@/assets/*": ["assets/*"], 
      "@/hooks/*": ["hooks/*"], 
      "@/types/*": ["types/*"], 
      "@/lib/*": ["lib/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src/api/checkout_session.js", "src/tests/setupTests.js", "jest.config.js"],
  "exclude": ["node_modules"]
}
